\ProvidesPackage{koc}

% declare CI color for the TU Ilmenau
\definecolor{black}{rgb}{0.00,0.00,0.00}
\definecolor{green}{rgb}{0,0.455,0.478}
\definecolor{blue}{rgb}{0,0.2,0.349}
\definecolor{koc}{rgb}{0.768, 0.070, 0.180}


% Background image (CI TU Ilmenau)
\setbeamercolor{background canvas}{bg=} % make the beamer background invisible
\AddToShipoutPicture{ \put(0em,0){
		\parbox[b][\paperheight]{\paperwidth}{
			\centering
			\rotatebox{0}{\includegraphics[width=1.0\paperwidth, height=1.0\paperheight]{style/images/background}} %background169 for 16x9
}}}
\setbeamersize{sidebar width left=5mm} % size of the left side bar
\setbeamersize{text margin left=2em,text margin right=2em}
\setbeamersize{mini frame size=0.4em}

% set colors
\setbeamercolor{structure}{fg=blue} % table of content
\setbeamercolor{mini frame}{fg=koc} % active elements in main-navigation
\setbeamercolor{section in head/foot}{fg=koc} % active elements in sub-navigation
\setbeamertemplate{mini frame in other subsection}[default][50] % saturate of the non-active elements in the navigation
\setbeamertemplate{section in head/foot shaded}[default][50]
\setbeamercolor{normal text}{fg=black} % generally text color
\setbeamercolor{title}{fg=koc} % text color of titlepage
\setbeamercolor{item}{fg=black} % color for bullets in items

\setbeamercolor{author in head/foot}{fg=white}
\setbeamercolor{title in head/foot}{fg=white}
\setbeamercolor{date in head/foot}{fg=white}
\setbeamercolor{pagenumber in head/foot}{fg=white}